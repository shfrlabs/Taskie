<Page
    x:Class="Taskie.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Taskie"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">
    <Grid>
        <Button
            x:Name="SidebarButton"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            IsTabStop="False"
            Height="30"
            Width="30"
            Padding="0"
            Margin="125, 7, 0, 7"
            Background="Transparent"
            BorderThickness="0"
            VerticalContentAlignment="Center"
            Canvas.ZIndex="999999"
            Click="SidebarButton_Click">
            <FontIcon
                Glyph="&#xE90C;"
                FontSize="14" />
        </Button>
        <Grid
            Background="Transparent"
            x:Name="TTB"
            VerticalAlignment="Top"
            Height="44"
            Canvas.ZIndex="9999">
            <Image
                Source="Assets\Logo.png"
                Width="20"
                Height="20"
                HorizontalAlignment="Left"
                Margin="12,0,0,0" />
            <StackPanel
                Orientation="Horizontal"
                VerticalAlignment="Center"
                Margin="40,0,0,0">
                <TextBlock
                    VerticalAlignment="Bottom"
                    Margin="0,0,5,0"
                    FontSize="12"
                    FontFamily="Segoe UI Variable Text">Taskie</TextBlock>
                <TextBlock
                    Margin="0,0,0,1"
                    VerticalAlignment="Bottom"
                    FontSize="9"
                    Opacity=".7"
                    x:Name="proText">FREE</TextBlock>
            </StackPanel>
        </Grid>
        <Grid
            x:Name="mainGrid"
            SizeChanged="mainGrid_SizeChanged">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="{x:Bind sidebarSize, Mode=TwoWay}" MinWidth="185" />
                <ColumnDefinition
                    Width="*" MinWidth="300" />
            </Grid.ColumnDefinitions>
            <toolkit:GridSplitter Opacity="0" HorizontalAlignment="Right" VerticalAlignment="Stretch" Margin="-15,0,15,0" Foreground="Transparent"/>
            <Frame
                x:Name="contentFrame"
                Grid.Column="1"
                Margin="-20, 0, 0, 0" />
            <Grid
                Grid.Column="0"
                Margin="0, 38, 20, 10"
                VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="88" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="105"
                        x:Name="BottomRow" />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Orientation="Vertical"
                    VerticalAlignment="Bottom">
                    <Button
                        Background="{ThemeResource ButtonBG}"
                        x:Name="AddItemBtn"
                        Click="AddList"
                        HorizontalContentAlignment="Center"
                        HorizontalAlignment="Stretch"
                        Height="35"
                        CornerRadius="8"
                        Margin="10, 0, 10, 10">
                        <Button.Resources>
                            <ResourceDictionary>
                                <ResourceDictionary.ThemeDictionaries>
                                    <ResourceDictionary
                                        x:Key="Default">
                                        <SolidColorBrush
                                            x:Key="ButtonBackgroundPointerOver"
                                            Color="{ThemeResource SystemAccentColorLight3}" />
                                        <SolidColorBrush
                                            x:Key="ButtonBackgroundPressed"
                                            Color="{ThemeResource SystemAccentColorLight3}" />
                                    </ResourceDictionary>
                                    <ResourceDictionary
                                        x:Key="Light">
                                        <SolidColorBrush
                                            x:Key="ButtonBackgroundPressed"
                                            Color="{ThemeResource SystemAccentColorDark2}" />
                                        <SolidColorBrush
                                            x:Key="ButtonBackgroundPointerOver"
                                            Color="{ThemeResource SystemAccentColorDark2}" />
                                    </ResourceDictionary>
                                </ResourceDictionary.ThemeDictionaries>
                            </ResourceDictionary>
                        </Button.Resources>
                        <StackPanel
                            Orientation="Horizontal">
                            <FontIcon
                                Glyph="&#xE710;"
                                FontSize="15"
                                Margin="0,0,10,0"
                                Foreground="{ThemeResource ContrastText}"
                                x:Name="NewListBtnIcon" />
                            <TextBlock
                                FontSize="13"
                                x:Uid="NewListBtn"
                                x:Name="NewListBtnText"
                                Foreground="{ThemeResource ContrastText}" />
                        </StackPanel>
                    </Button>
                    <AutoSuggestBox
                        TextChanged="AutoSuggestBox_TextChanged"
                        SuggestionChosen="searchbox_SuggestionChosen"
                        Margin="10,0,10,2"
                        x:Uid="SearchBox"
                        HorizontalAlignment="Stretch"
                        Height="35"
                        CornerRadius="8"
                        FontSize="13"
                        BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                        VerticalContentAlignment="Center"
                        Style="{ThemeResource SearchStyle}"
                        VerticalAlignment="Bottom"
                        x:Name="searchbox">
                        <AutoSuggestBox.QueryIcon>
                            <FontIcon
                                Glyph="&#xE721;"
                                FontSize="15"
                                Opacity=".7" />
                        </AutoSuggestBox.QueryIcon>
                    </AutoSuggestBox>
                </StackPanel>
                <Rectangle
                    Grid.Row="1"
                    Fill="Transparent"
                    x:Name="rectlist"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="7,23,7,0"
                    SizeChanged="rectlist_SizeChanged" />
                <StackPanel
                    Orientation="Vertical"
                    Grid.Row="1"
                    VerticalAlignment="Stretch">
                    <NavigationViewItemSeparator
                        Width="3000"
                        Margin="-100, 0, 0, 0"
                        Opacity=".3"></NavigationViewItemSeparator>
                    <ListView
                        x:Name="Navigation"
                        Margin="7,2,7,0"
                        SelectionMode="Single"
                        SelectionChanged="ListSelector_SelectionChanged" />
                    <ProgressRing
                        IsActive="True"
                        x:Name="LoadRing"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" />
                </StackPanel>
                <StackPanel
                    Orientation="Vertical"
                    Grid.Row="2">
                    <NavigationViewItemSeparator
                        Width="3000"
                        Margin="-100, 0, 0, 0"
                        Opacity=".3"></NavigationViewItemSeparator>
                    <Button
                        x:Name="UpdateButton"
                        Click="UpgradeButton_Click"
                        HorizontalContentAlignment="Center"
                        Margin="10, 3, 10 ,10"
                        HorizontalAlignment="Stretch"
                        Height="35"
                        CornerRadius="8"
                        BorderThickness="2"
                        BorderBrush="{ThemeResource ButtonBG}">
                        <StackPanel
                            Orientation="Horizontal">
                            <FontIcon
                                Glyph="&#xE74A;"
                                FontSize="15"
                                Margin="0,0,10,0" />
                            <TextBlock
                                FontSize="13"
                                x:Uid="UpgradeText"></TextBlock>
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="SettingsButton"
                        Click="SettingsButton_Click"
                        HorizontalContentAlignment="Center"
                        HorizontalAlignment="Stretch"
                        Height="35"
                        CornerRadius="8"
                        Margin="10, 0, 10 ,0">
                        <StackPanel
                            Orientation="Horizontal">
                            <FontIcon
                                Glyph="&#xE713;"
                                FontSize="15"
                                Margin="0,0,10,0" />
                            <TextBlock
                                FontSize="13"
                                x:Uid="SettingsText" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
            <Grid
                Background="{ThemeResource SidebarBrush}"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Grid.RowSpan="3"
                Margin="-20,-50,-50,-50"
                Canvas.ZIndex="-10"
                Grid.ColumnSpan="2"
                x:Name="rect1">
            </Grid>
            <Grid
                VerticalAlignment="Stretch"
                Margin="-20,-20,20,-20"
                Grid.Column="0"
                Grid.RowSpan="4"
                Background="{ThemeResource SystemAltLowColorBrush}"
                Canvas.ZIndex="-10"
                Opacity="1"
                HorizontalAlignment="Stretch"
                x:Name="rect2" />
        </Grid>
        <muxc:TeachingTip
            x:Uid="tipwrongname"
            x:Name="tipwrongname"
            IsOpen="False" />
    </Grid>
</Page>
